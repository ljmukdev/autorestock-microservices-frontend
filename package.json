{
  "name": "autorestock",
  "version": "1.0.0",
  "description": "AutoRestock Monorepo - Microservices and Frontends",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter='@autorestock/*' build && pnpm -r --filter='./frontends/*' build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "start:legacy": "node server.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "autorestock",
    "monorepo",
    "microservices",
    "frontend"
  ],
  "author": "LJMUK",
  "license": "MIT",
  "packageManager": "pnpm@8.10.0"
}