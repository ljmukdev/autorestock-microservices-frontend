{
  "name": "@autorestock/ui-kit",
  "version": "1.0.0",
  "description": "AutoRestock Design System - Theme tokens, components, and primitives",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles/global.css": "./dist/styles/global.css",
    "./dist/styles/global.css": "./dist/styles/global.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && node -e \"const fs=require('fs'); fs.mkdirSync('dist/styles', {recursive:true}); fs.copyFileSync('src/styles/global.css', 'dist/styles/global.css')\"",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "keywords": [
    "autorestock",
    "ui-kit",
    "design-system",
    "components",
    "theme"
  ],
  "author": "LJMUK",
  "license": "MIT"
}
